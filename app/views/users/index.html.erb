<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h4>Lista de Palestrantes</h4>

    <%= form_tag(users_path, method: :get) do %>
      <%= text_field_tag 'search', nil, placeholder: 'Digite o nome do palestrante...' %>
      <%= submit_tag "Procurar" %>
    <% end %>

    <table class="highlight responsive-table">
      <thead>
        <tr>
          <th>Nome do Palestrante</th>
          <th>Nota</th>
        </tr>
      </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.rate %></td>
        <td><%= link_to 'Ver', user, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  <%= link_to 'Voltar', user_page_path, class: "waves-effect waves-light btn" %>
</div>
