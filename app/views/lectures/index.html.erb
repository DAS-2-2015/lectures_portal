<p id="notice"><%= notice %></p>

<h1>Lista de Palestras</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Duração</th>
      <th>Preço</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.title %></td>
        <td><%= lecture.description %></td>
        <td><%= lecture.duration %></td>
        <td><%= lecture.price %></td>
        <td><%= lecture.date %></td>
        <td><%= link_to 'Ver', lecture %></td>
        <td><%= link_to 'Editar', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Apagar', lecture, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar uma palestra', new_lecture_path %>
