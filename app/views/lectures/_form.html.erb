<div class="container">
  <div class="row">
    <%= form_for(@lecture) do |f| %>
      <%= f.hidden_field :speaker_id, value: session[:user_id] %>
      <% if @lecture.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

          <ul>
          <% @lecture.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="input-field">
        <%= f.label :theme %><br>
        <%= f.text_field :theme %>
      </div>
      <div class="input-field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>
      <div class="input-field">
        <%= f.label :address %><br>
        <%= f.text_field :address %>
      </div>
      <div class="input-field">
        <%= f.label :price %><br>
        <%= f.number_field :price %>
      </div>
      <div class="input-field">
        <%= f.label :duration %><br>
        <%= f.number_field :duration %>
      </div>
      <div class="input-field">
        <%= f.label :date %><br>
        <%= f.text_field :date, as: :datepicker%>
      </div>
      <div class="actions">
        <%= f.submit class: 'waves-effect waves-light btn' %>
        <%= link_to 'Voltar', lectures_path, class: "waves-effect waves-light btn" %>
      </div>
    <% end %>
  </div>
</div>
